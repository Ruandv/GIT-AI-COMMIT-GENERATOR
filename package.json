{
  "name": "GIT-AI-COMMIT",
  "version": "1.0.48",
  "description": "A simple CLI for creating conventional commit messages",
  "private": true,
  "scripts": {
    "start": "nodemon --exec npx ts-node ./src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "npm i -g && git-ai",
    "package": "npm version patch --force && npm pack",
    "refresh": "npm run build && rm *.tgz && rm -rf ./node_modules ./package-lock.json && npm run package && npm install"
  },
  "bin": {
    "git-ai": "dist/index.js"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "figlet": "^1.7.0",
    "path": "^0.12.7",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/clear": "^0.1.4",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.12.4",
    "@types/yargs": "^17.0.32",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
